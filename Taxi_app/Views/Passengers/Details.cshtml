@model Taxi_app.Models.Passenger

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Passenger</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        @if (ViewBag.previousPassengerRides.Count > 0)
        {
            <dt>
                Previous rides
            </dt>

            <dd>
                @foreach (var ride in ViewBag.previousPassengerRides)
                {
                    <div>
                        @ride.StartLocation.Name -  @ride.EndLocation.Name (@ride.Time)
                    </div>
                }
            </dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
