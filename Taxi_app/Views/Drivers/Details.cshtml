@model Taxi_app.Models.Driver

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Driver</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OwnedVehicles)
        </dt>

        <dd>
            @foreach (var vehicle in Model.OwnedVehicles)
            {
                <div>
                    @vehicle.Fullname
                </div>
            }
        </dd>
        
        @if (ViewBag.previousRides.Count > 0)
        {
            <dt>
                Previous rides
            </dt>

            <dd>
                @foreach (var ride in ViewBag.previousRides)
                {
                    <div>
                        @ride.StartLocation.Name -  @ride.EndLocation.Name (@ride.Time)
                    </div>
                }
            </dd>
        }

        @if (ViewBag.bookedRides.Count > 0)
        {
            <dt>
                Booked rides
            </dt>

            <dd>
                @foreach (var ride in ViewBag.bookedRides)
                {
                    <div>
                        @ride.StartLocation.Name -  @ride.EndLocation.Name (@ride.Time)
                    </div>
                }
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
